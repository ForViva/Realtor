doctype html
html(ng-app='Realtor')
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.5/angular.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.5/angular-resource.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.5/angular-route.js')
    script(src='/javascripts/realtor.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
  body(style="padding: 0px;")
    nav(class="navbar navbar-default navbar-static-top", role="navigation")
      div(class="container-fluid" style="margin-left: 5%; margin-right: 5%")
        div(class="navbar-header")
          a(href="/#/", class="navbar-brand") Realtor
        div(id="navbar", class="collapse navbar-collapse")
          ul(class="nav navbar-nav navbar-right")
            if (!user)
              li
                button(class="btn btn-default navbar-btn")
                  a(href="/login" style="text-decoration:none;") Login
              li
                button(class="btn btn-default navbar-btn")
                  a(href="/register" style="text-decoration:none;") Register
            if (user)
              li
                p(class="navbar-text") Welcome, #{user.username}.
              li
                button(class="btn btn-default navbar-btn")
                  a(href="/logout" style="text-decoration:none;") Logout
    div(style="margin-left: 5%; margin-right: 5%")
      block content
